@model Domain.Model.Models.Donation

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar doação</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="DonationName" class="control-label"></label>
                <input asp-for="DonationName" class="form-control"/>
                <span asp-validation-for="DonationName" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label asp-for="ImageUri" class="control-label"></label>
                <img src="@Model.ImageUri" style="width: 100px"/>
                <input type="file" name="file" class="form-control" accept=".jpg"/>
                <input type="hidden" asp-for="ImageUri"/>

            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfRegister" class="control-label"></label>
                <input asp-for="DateOfRegister" class="form-control"/>
                <span asp-validation-for="DateOfRegister" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courier" class="control-label"></label>
                <input asp-for="Courier" class="form-control"/>
                <span asp-validation-for="Courier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control"/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="NewOrOld"/> @Html.DisplayNameFor(model => model.NewOrOld)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
