@model Domain.Model.Models.Donation

@{
    ViewData["Title"] = "Create";
}

<h1>Criar nova doação</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DonationName" class="control-label"></label>
                <input asp-for="DonationName" class="form-control" />
                <span asp-validation-for="DonationName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUri" class="control-label"></label>
                <input type="file" asp-for="ImageUri" class="form-control" accept=".jpg" required />
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfRegister" class="control-label"></label>
                <input asp-for="DateOfRegister" class="form-control" />
                <span asp-validation-for="DateOfRegister" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courier" class="control-label"></label>
                <input asp-for="Courier" class="form-control" />
                <span asp-validation-for="Courier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="NewOrOld" /> @Html.DisplayNameFor(model => model.NewOrOld)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
